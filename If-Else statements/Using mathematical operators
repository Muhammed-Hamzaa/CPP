#include <iostream>
using namespace std;
int main()
{
	float a,b;
	char op;
	cout<<"Enter any two numbers"<<endl;
	cin>>a;
	cin>>b;
	cout<<"enter any operand (+,-,*,/)"<<endl;
	cin>>op;
	if(op=='+')
	{
		cout<<"The sum of two numbers is = "<<a+b<<endl;
	}
	else if(op=='-')
	{
		cout<<"The subtraction of two number is = "<<a-b<<endl;
	}
	else if(op=='*')
	{
		cout<<"The product of two numbers is = "<<a*b<<endl;
	}
	else if(op=='/')
	{
		cout<<"The division of two numbers is = "<<a/b<<endl;
	}
	else
	{
		cout<<"Wrong operator";
	}
	return 0;
}
